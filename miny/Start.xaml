<Window x:Class="miny.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:miny"
        mc:Ignorable="d"
        Title="Start Menu" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Pozadí s obrázkem -->
        <Image Source="H:\projekt miny\miny\sydney.jpg" Stretch="Fill" />

        <!-- Tlačítko pro spuštění hry -->
        <Button Content="Hraj!" Width="200" Height="50" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Margin="0,-30,0,0"
                FontSize="24" Background="LightGreen"
                Click="StartGame_Click" />

        <!-- Tlačítko pro ukončení hry -->
        <Button Content="Odejít" Width="200" Height="50" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Margin="0,60,0,0"
                FontSize="24" Background="Tomato"
                Click="ExitGame_Click" />
    </Grid>
</Window>

