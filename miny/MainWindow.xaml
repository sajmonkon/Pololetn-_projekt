<Window x:Class="miny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:miny"
        mc:Ignorable="d"
        Title="Minesweeper - Sydney Sweeney" Height="600" Width="600">
    <Grid>
        <!-- Herní mřížka -->
        <Grid x:Name="GameGrid" Background="Transparent" Margin="0,50,0,0" />

        <!-- Tlačítko pro návrat do menu -->
        <Button Content="Menu" Width="80" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                Click="ReturnToMenu_Click" Background="{x:Null}" />
    </Grid>
</Window>

